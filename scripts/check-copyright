files=$(git ls-files | grep -e '.*\.\(cc\|cpp\|hpp\|cppm\)' | grep -v 'tpls/')
echo "" &> scripts/diff_files
tmp=$(wc -l < scripts/LICENSE_FILE_HEADER)
NNEW=$(($tmp))
for file in $files
do
  head -n +$NNEW "${file}" | diff -q - scripts/LICENSE_FILE_HEADER > /dev/null
  if [[ "${?}" == 1 ]]
  then
    echo "${file}" >> scripts/diff_files
  fi
done
tmpfile=$(mktemp -t kokkos_diff_files.XXXX)
sort < scripts/diff_files &> "${tmpfile}"
mv "${tmpfile}" scripts/diff_files
